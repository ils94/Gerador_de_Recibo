<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Banco do Brasil"
            android:textColor="#333333"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextPIXBB"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bg"
            android:gravity="top|start"
            android:hint="Código do QR Code"
            android:padding="5dp"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextPIXBBChave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:gravity="top|start"
            android:hint="Chave PIX"
            android:singleLine="true"
            android:padding="5dp"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Caixa Economica Federal"
            android:textColor="#333333"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextPIXCaixa"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bg"
            android:gravity="top|start"
            android:hint="Código do QR Code"
            android:padding="5dp"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextPIXCaixaChave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:gravity="top|start"
            android:hint="Chave PIX"
            android:singleLine="true"
            android:padding="5dp"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nubank"
            android:textColor="#333333"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editTextPIXNubank"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_bg"
            android:gravity="top|start"
            android:hint="Código do QR Code"
            android:padding="5dp"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextPIXNubankChave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:gravity="top|start"
            android:hint="Chave PIX"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/buttonSalvarPIX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_bg"
            android:padding="5dp"
            android:text="Salvar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
